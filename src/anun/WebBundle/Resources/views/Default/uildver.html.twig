{% extends '@anunWeb/Layout/base.html.twig' %}
{% block style %}
    <style>
        .overlay h4.base {
            color: #000;;
        }

        .work-item {
            background-color: #ffffff;
            border: 5px solid #ffffff;
        }

        .more{
            width: 100%;
            text-align: center;
            margin-top: 35px;
        }
        .more:hover
        {
            color: #ffd200;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="service-1 mid-level-padding text-center"
         style="background-color: #ffd200;padding: 0;padding-top: 30px;;overflow: hidden">
        <div class="container">

            <div class="row">
                <div class="col-sm-6 wow slideInLeft animated"
                     style="visibility: visible; animation-name: slideInLeft;">
                    <div class="outer-bound">
                        <div class="left-section">

                            <div class="feature">
                                <div class="row">
                                    <div class="home-alban-tasalgaa-header" style="padding-top: 120px">
                                        <h2>
                                            ҮЙЛДВЭРЛЭЛ
                                        </h2>
                                    </div>
                                    <div class="home-alban-tasalgaa-body">
                                        <p>
                                            АНУН дэлхийн зах зээлээс хамгийн
                                            сайн чанарын гэр ахуйн тавилгыг
                                            сонгон Монголын хэрэглэгчдэд гэрээ бүрэн тохижуулах шийдлүүдийг
                                            хүргэдэг.
                                        </p>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
                <div class="col-sm-1">
                </div>
                <div class="col-sm-4 zuragnuud">
                    <div class="right-section wow slideInRight animated"
                         style="visibility: visible; animation-name: slideInRight;width: 100%">
                        <img src="{{ asset('resources/web/images/wood.png') }}" class="img-responsive"
                             alt="Asem Villa">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="container" style="margin-top: 50px;margin-bottom: 50px;">
        <div class="portfolio">
            <div id="project" class="wow fadeInUp section-padding" data-wow-duration="500ms" data-wow-delay="900ms">
            </div>
            <div class="container-fluid project-wrapper" id="MixItUp218D4D">
                <div class="zerogrid">
                    <div class="wrap-container clearfix">
                        <div class="row wrap-content">

                            <div class=" text-center" style="background-color: #fff;padding-bottom: 30px">
                                <h5>танилцуулга</h5>
                                <h2>ҮЙЛДВЭРИЙН ЗАГВАРУУД</h2>
                            </div>

                            {% for g in ger %}
                                <div class="col-1-4 mix work-item graphic" style="display: inline-block;">
                                    <div class="wrap-col">
                                        <div class="item-container">
                                            <a class="fancybox overlay text-center" href="{{ path('product' , {'id' : g.id}) }}">
                                                <div class="overlay-inner">
                                                    <h4 class="base">{{ g.name }}</h4>
                                                    <div class="line"></div>
                                                    <p>{{ g.descr|raw }}</p>
                                                </div>
                                            </a>
                                            <img src="{{ image_path_category }}/{{ g.imgPath }}" >
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="more">

            <i class="fa fa-th-large" aria-hidden="true"></i>
            <a class="" href="#">Илүү ихийг үзэх
            </a>

        </div>

    </section>

{% endblock %}
{% block js %}
{% endblock %}