{% extends '@anunWeb/Layout/base.html.twig' %}
{% block style %}
    <style>
        .overlay h4.base {
            color: #000;;
        }

        .work-item {
            background-color: #ffffff;
            border: 5px solid #ffffff;
        }

        .more {
            width: 100%;
            text-align: center;
            margin-top: 35px;
        }

        .more:hover {
            color: #ffd200;
        }
    </style>
{% endblock %}
{% block body %}
    <section class="container" style="margin-top: 100px;margin-bottom: 50px;">
        <div class="portfolio">
            <div id="project" class="wow fadeInUp section-padding" data-wow-duration="500ms" data-wow-delay="900ms">
            </div>
            <div class="container-fluid project-wrapper" id="MixItUp218D4D">
                <div class="zerogrid">
                    <div class="wrap-container clearfix">
                        <div class="row wrap-content">

                            <div class=" text-center" style="background-color: #fff;padding-bottom: 30px">
                                <h2>ШИРЭЭ</h2>
                            </div>
                            {% for i in 1..24 %}
                                <div class="col-1-4 mix work-item graphic" style="display: inline-block;">
                                    <div class="wrap-col">
                                        <div class="item-container">
                                            <a class="fancybox overlay text-center"
                                               href="{{ path('product_detail' , {'id' : 1}) }}">
                                                <div class="overlay-inner">
                                                    <h4 class="base">Asem Villa</h4>
                                                    <div class="line"></div>
                                                    <p>Showroom</p>
                                                </div>
                                            </a>
                                            <img src="{{ asset('resources/web/images/workimg2.jpg') }}" alt="work">
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="more">

            <i class="fa fa-th-large" aria-hidden="true"></i>
            <a class="" href="#">Илүү ихийг үзэх
            </a>

        </div>

    </section>

{% endblock %}
{% block js %}
{% endblock %}