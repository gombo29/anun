{% extends '@anunWeb/Layout/base.html.twig' %}
{% block style %}
    <style>
        .thisissis:hover .overlay {
            opacity: 0;
        }

        .detail-header {
            margin-top: 20px
        }

        @media only screen and (max-width: 767px) {
            .detail-header {
                margin-top: 100px
            }
        }

        .breadcrumb > li + li::before {
            color: #ffffff;
            content: "";
        }

        .nav-tabs > li.active > a, .nav-tabs > li.active > a:focus, .nav-tabs > li.active > a:hover {
            color: #ffd200;
            cursor: default;
            background-color: #fff;
            border: 1px solid transparent;
            border-bottom: 3px solid #ffd200;
        }

        .nav-tabs {
            border-top: 1px solid #ddd;
        }

        .nav > li > a:focus, .nav > li > a:hover {
            text-decoration: none;
            color: #ffd200;
            cursor: default;
            background-color: #fff;
            border: 1px solid transparent;
            border-bottom: 3px solid #ffd200;
        }

    </style>
{% endblock %}
{% block body %}
    <div id="about-us">
        <div class="about-us-2 about-us-body  text-center">


            <div class="col-xs-12  wow bounceIn detail-header"
                 style="visibility: visible;background-color: #ffd200;padding: 70px 0;text-align: center;color: #ffffff;margin-top: 0">
                <div>

                    <h4>{{ name }}</h4>
                    <ol class="breadcrumb" style="background-color: transparent">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Нүүр хуудас</a><i
                                    class="fa fa-chevron-right " style="font-size: 10px;margin-left: 10px"></i>
                        </li>
                        <li class="breadcrumb-item"><a
                                    href="{% if paren1id == 1 %}{{ path('ger') }}{% else %}{{ path('albantasalgaa') }}{% endif %}">{{ paren1name }}</a><i
                                    class="fa fa-chevron-right " style="font-size: 10px;margin-left: 10px"></i>
                        </li>
                        <li class="breadcrumb-item"><a
                                    href="{{ path('product', {'id': paren2id}) }}">{{ paren2name }}</a><i
                                    class="fa fa-chevron-right " style="font-size: 10px;margin-left: 10px"></i>
                        </li>
                        <li class="breadcrumb-item active" style="color: #ffffff">{{ name }}</li>
                    </ol>

                </div>
            </div>
            <div class="container" style="margin-top: -100px">
                <div class="row">
                    <div class="col-xs-6  wow bounceIn detail-header" style="visibility: visible;text-align: left;">
                        <div style="margin-bottom: 50px">

                            <h5 style="color: #000000"><b>{{ name }}</b> {{ paren2name }}</h5>
                            <p style="font-weight: 300;font-size: 12px">{{ code }}</p>
                        </div>

                        <p style="margin-bottom: 10px;font-size: 14px">өнгө:</p>
                        <div>
                            {% for c in colors %}
                                <div style="width: 20px;height: 20px;border-radius: 50%;background-color: #{{ c.color }};display: inline-block">
                                </div>

                            {% endfor %}
                            <p style="font-weight: 300;font-size: 12px;text-align: justify">
                                {{ headline|raw }}</p>


                        </div>
                    </div>
                    {% for a in alba %}
                        <div class="col-md-6 col-sm-12 col-xs-12 wow bounceIn" style="margin-top: 20px">
                            <div class="container-fluid project-wrapper" id="MixItUp218D4D">
                                <div class="zerogrid">
                                    <div class="wrap-container clearfix">
                                        <div class="row wrap-content">
                                            {% for i in a.images %}
                                                <div class="col-2-4">
                                                    <div class="col-full mix work-item video"
                                                         style="display: inline-block;">
                                                        <div class="wrap-col">
                                                            <div class="item-container thisissis">
                                                                <a class="fancybox overlay text-center"
                                                                   data-fancybox-group="gallery"
                                                                   href="{{ image_path_item }}/{{ i.imgPath }}">
                                                                </a>
                                                                <img src="{{ image_path_item }}/{{ i.imgPath }}">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    <div class="col-md-12 col-sm-12 col-xs-12 wow bounceIn" style="margin-top: 70px">
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab"
                                                                      data-toggle="tab">Арчлах заавар</a></li>
                            <li role="presentation"><a href="#profile" aria-controls="profile" role="tab"
                                                       data-toggle="tab">Бүтээгдэхүүний хэмжээ</a></li>

                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="home">
                                {% if content != null %}
                                    {{ content|raw }}
                                {% else %}
                                    Одоогоор мэдээлэл ороогүй байна.
                                {% endif %}
                            </div>
                            <div role="tabpanel" class="tab-pane" id="profile">

                                {% if description != null %}
                                    {{ content|raw }}
                                {% else %}
                                    Одоогоор мэдээлэл ороогүй байна.
                                {% endif %}
                            </div>

                        </div>

                    </div>
                </div>


                <div style="margin-top: 50px">


  <div class="container-fluid project-wrapper" id="MixItUp218D4D">
                <div class="zerogrid">
                    <div class="wrap-container clearfix">
                        <div class="row wrap-content">

                          <div class="col-1-4 mix work-item graphic" style="display: inline-block;">
                        <div class="wrap-col">
                            <div class="item-container">
                                <a class="fancybox overlay text-center"
                                   href="{{ path('product' , {'id' : paren2id}) }}">
                                    <div class="overlay-inner">
                                        <h4 class="base">{{ paren2name }}</h4>
                                        <div class="line"></div>
                                    </div>
                                </a>
                                <img src="{{ image_path_category }}/{{ paren2img }}">
                            </div>
                        </div>
                    </div>
                    {% for i in suggest %}
                        <div class="col-1-4 mix work-item graphic" style="display: inline-block;">
                            <div class="wrap-col">
                                <div class="item-container">
                                    <a class="fancybox overlay text-center"
                                       href="{{ path('product_detail' , {'id' : i.id}) }}">
                                        <div class="overlay-inner">
                                            <h4 class="base">{{ i.name }}</h4>
                                            <div class="line"></div>
                                            <p>{{ i.headLine|raw }}</p>
                                        </div>
                                    </a>
                                    <img src="{{ image_path_item }}/{{ i.mainImgPath }}">
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
    {% block js %}
        <script src="{{ asset('resources/web/js/swiper.min.js') }}"></script>

        <script>
            var galleryTop = new Swiper('.gallery-top', {
                nextButton: '.swiper-button-next',
                prevButton: '.swiper-button-prev',
                spaceBetween: 10,
            });
            var galleryThumbs = new Swiper('.gallery-thumbs', {
                spaceBetween: 10,
                centeredSlides: true,
                slidesPerView: 'auto',
                touchRatio: 0.2,
                slideToClickedSlide: true
            });
            galleryTop.params.control = galleryThumbs;
            galleryThumbs.params.control = galleryTop;

        </script>
    {% endblock %}